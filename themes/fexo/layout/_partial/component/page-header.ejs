<div class="page-header">

  <% if(theme.breadcrumb && theme.breadcrumb.isShow == true) { %>
    <div class="breadcrumb">
      <div class="location"><%= location %></div>
      <i class="icon-location"></i>
    </div>
  <% } %>

  <%- partial('toolbox') %>

  <div class="box-blog-info">
    <a class="avatar" href="/">
      <img src="<%= theme.avatar %>" alt="" />
    </a>
    <div class="info">
      <h3 class="name">
        <%= theme.blog_name %>
      </h3>
      <div class="slogan">
        <%= theme.slogan %>
      </div>
    </div>
  </div>

</div>
